{% endblock %}
<script>
	var password = document.getElementById("password"),
confirm_password = document.getElementById("confirm_password");

function validatePassword() {
if (password.value != confirm_password.value) {
confirm_password.setCustomValidity("Passwords Don't Match");
} else {
confirm_password.setCustomValidity('');
}
}

password.onchange = validatePassword;
confirm_password.onkeyup = validatePassword;
</script>


{% block body %}
	<div class="splash-container" {#STYLE="margin-top: 150px;"#}>
		<div class="card ">
			<div class="card-header text-center">
				<a href="{{ path("home") }}"><img class="logo-img" src="{{ asset('logo/logo7.png ') }}" alt="logo" style="height: 255px;"></a>
				<span class="splash-description">Please enter your user information.</span>
			</div>
			<div class="card-body">
				<form method="post">
                <h2 class="bubble-title">Password recovery</h2>

					{# {% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %} #}

					
					<input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
                    <br>
                    <input type="password" name="Confirmpassword" class="form-control"   placeholder="Confirm Password" id="confirm_password" required>





					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{# 

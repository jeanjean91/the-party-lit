{#{% block title %}Log in!{% endblock %}#}

{% block body %}
    <div class="splash-container"{#STYLE="margin-top: 150px;"#}>
        <div class="card ">
            <div class="card-header text-center">
                <a href="{{ path("home") }}"><img class="logo-img" src="{{ asset('logo/logo7.png ') }}" alt="logo" style="height: 255px;"></a>
                <span class="splash-description">Please enter your user information.</span>
            </div>

            <div class="card-body">
            
            <h2 class="bubble-title">Registration</h2>


                {% block fos_user_content %}
                    {{ form_start(registrationForm) }}
                    {#{{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.password) }}
        #}
                    {{ form_widget(registrationForm) }}
                    <button class="btn btn-success">inscription</button>

                    {{ form_end(registrationForm) }}


                {% endblock fos_user_content %}





            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="{{ path('app_login') }}" class="footer-link"> Back  To  Login </a></div>
                <div class="card-footer-item card-footer-item-bordered">
                <a href=" {{path ('app_forgotten_password')}}" class="footer-link">Forgot Password</a>

                </div>
            </div>
        </div>
    </div>
{% endblock %}




